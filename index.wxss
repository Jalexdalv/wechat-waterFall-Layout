.item-container {
    width: 100%;
    display: inline-block;
}

.all{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.col{
  width: 49%;
}

.img{
  width: 100%;
  height: 100%;
}

.desc {
    margin-top: -50rpx;
    margin-bottom: 10rpx;
    display: flex; 
    align-items: center;
    flex-direction: row;
    justify-content:space-between;
    margin-right: 20rpx;
}

.desc .right {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.desc .faceName {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-left: 20rpx;
}

.myface {
    display: block;
    width: 60rpx;
    height: 60rpx;
    border-radius: 30rpx;
    margin-top: 10rpx;
    margin-right: 20rpx;
}

.nickname {
    font-size: 20rpx;
    margin-top: 6rpx;
    margin-right: 20rpx;
    color: gray;
}

.info-row {
  display: flex;
  flex-direction: row;
}

.mylikecount {
  display: flex;
  flex-direction: row;
  justify-content:center;
  margin-top: 40rpx;
  font-size: 25rpx;
  color: gray;
}
